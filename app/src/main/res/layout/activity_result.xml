<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFFEB3B"
    android:padding="10dp"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="51dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/homebtn"
        android:layout_width="52dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toEndOf="@+id/backbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageedit"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbtn"
        app:layout_constraintVertical_bias="0.19"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/sharebtn"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/whatappbtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fbbtn"
        app:layout_constraintStart_toStartOf="@+id/imageedit"
        app:layout_constraintTop_toBottomOf="@+id/imageedit"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/fbbtn"
        android:layout_width="78dp"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/sharebtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageedit"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/whatappbtn"
        android:layout_width="71dp"
        android:layout_height="58dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/instagrambtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sharebtn"
        app:layout_constraintStart_toStartOf="@+id/imageedit"
        app:layout_constraintTop_toBottomOf="@+id/imageedit"
        app:srcCompat="@drawable/whatsapp" />

    <ImageView
        android:id="@+id/instagrambtn"
        android:layout_width="81dp"
        android:layout_height="70dp"
        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/whatappbtn"
        app:layout_constraintStart_toStartOf="@+id/imageedit"
        app:layout_constraintTop_toBottomOf="@+id/imageedit"
        app:srcCompat="@drawable/instragram" />
</androidx.constraintlayout.widget.ConstraintLayout>